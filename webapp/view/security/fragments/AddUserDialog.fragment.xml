<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="AddUserDialog"
        title="Añadir Usuario"
        icon="sap-icon://add"
        type="Message"
        class="customDialogSize"
        draggable="true"
        resizable="true"
    >
        <VBox id="AddUserDialogVbox" class="sapUiSmallMargin">
            <Input id="inputUserId" placeholder="ID de Usuario"/>

            <Input id="inputUsername" placeholder="Nombre de usuario"/>

            <Input id="inputAlias" placeholder="Alias"/>

            <Input id="inputFirstName" placeholder="Nombre"/>

            <Input id="inputLastName" placeholder="Apellidos"/>

            <DatePicker id="inputUserBirthdayDate" placeholder="Fecha de nacimiento"/>

            <ComboBox id="comboBoxCompanies"
                items="{companiesModel>/companies}"
                selectionChange="onCompanySelected"
                placeholder="Compañía">
                <core:Item key="{companiesModel>VALUEID}" text="{companiesModel>VALUE}" />
            </ComboBox>
            
            <Input id="inputUserDepartment" placeholder="Departamento"/>
            <!--<ComboBox id="comboBoxCedis" items="{/cedis}" selectionChange="onCediSelected" placeholder="Departamento">
                <core:Item id="CediItem" key="{CEDIID}" text="{CEDINAME}" />
            </ComboBox> -->

            <Input id="inputEmployeeId" placeholder="ID de Empleado"/>

            <Input id="inputUserPhoneNumber" placeholder="Número telefónico"/>

            <Input id="inputUserEmail" placeholder="Correo Electrónico"/>

            <Input id="inputUserExtension" placeholder="Extensión"/>

            <Input id="inputUserFunction" placeholder="Función que ejerce"/>

            <Input id="inputUserStreet" placeholder="Calle"/>

            <Input id="inputUserPostalCode" placeholder="Código Postal" type="Number"/>

            <Input id="inputUserCity" placeholder="Ciudad"/>

            <Input id="inputUserRegion" placeholder="Región"/>

            <Input id="inputUserState" placeholder="Estado"/>

            <Input id="inputUserCountry" placeholder="País"/>

            <ComboBox id="comboBoxRoles" items="{/roles}" selectionChange="onRoleSelected" placeholder="Selecciona un Rol">
                <core:Item id="RoleItem" key="{ROLEID}" text="{ROLENAME}" />
            </ComboBox>
            
            <VBox id="selectedRolesVBox" class="sapUiSmallMarginTop">
                <!--VBOx donde va añadiendo los roles -->
            </VBox>

        </VBox>

        <beginButton>
            <Button id="SaveNewUser" text="Guardar" type="Emphasized" press="onSaveUser" />
        </beginButton>

        <endButton>
            <Button id="CancelSaveUser" text="Cancelar" press="onCancelUser" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

<mvc:View
    controllerName="com.invertions.sapfiorimodinv.controller.investments.Investments"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:mc="sap.suite.ui.microchart"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    displayBlock="true"
>
    <Page
        id="investmentsPage"
        title="{i18n>investmentsPageTitle}"
        showHeader="true"
    >
        <headerContent>
            <core:Fragment
                fragmentName="com.invertions.sapfiorimodinv.view.investments.fragments.SymbolSelector"
                type="XML"
            />
            <ToolbarSpacer />
            <Text
                text="{= 'Balance: $' + ${strategyAnalysisModel>/balance} }"
                class="customSuccessText sapUiSmallMarginBegin"
            />
        </headerContent>
        <content>
            <VBox class="sapUiResponsivePadding">
                <IconTabBar
                    expandable="false"
                    selectedKey="{viewModel>/selectedTab}"
                    select=".onTabSelect"
                >
                    <items>
                        <IconTabFilter
                            text="Table"
                            key="table"
                        >
                            <FlexBox
                                renderType="Bare"
                                alignItems="Stretch"
                                justifyContent="Start"
                                width="100%"
                            >
                                <VBox
                                    fitContainer="true"
                                    width="100%"
                                    class="sapUiSmallMarginEnd"
                                >
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                    <ScrollContainer
                                        height="60%"
                                        vertical="true"
                                        horizontal="false"
                                        width="100%"
                                    >
                                        <Table
                                            items="{strategyResultModel>/chart_data}"
                                            width="100%"
                                            growing="false"
                                        >
                                            <columns>
                                                <Column>
                                                    <Text text="Date" />
                                                </Column>
                                                <Column>
                                                    <Text text="Open" />
                                                </Column>
                                                <Column>
                                                    <Text text="High" />
                                                </Column>
                                                <Column>
                                                    <Text text="Low" />
                                                </Column>
                                                <Column>
                                                    <Text text="Close" />
                                                </Column>
                                                <Column>
                                                    <Text text="Volume" />
                                                </Column>
                                                <Column>
                                                    <Text text="Indicators" />
                                                </Column>
                                                <Column>
                                                    <Text text="Signals" />
                                                </Column>
                                                <Column>
                                                    <Text text="Rules" />
                                                </Column>
                                                <Column>
                                                    <Text text="Shares" />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <Text
                                                        text="{path: 'strategyResultModel>DATE', formatter: '.formatter.formatDateForTable'}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>OPEN}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>HIGH}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>LOW}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>CLOSE}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>VOLUME}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>INDICATORS}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>SIGNALS}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>RULES}"
                                                    />
                                                    <Text
                                                        text="{strategyResultModel>SHARES}"
                                                    />
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </ScrollContainer>
                                </VBox>
                                <VBox
                                    width="300px"
                                    class="sapUiSmallMarginBottom"
                                >
                                    <core:Fragment
                                        id="strategyAnalysisPanelTable"
                                        fragmentName="com.invertions.sapfiorimodinv.view.investments.fragments.StrategyAnalysisPanel"
                                        type="XML"
                                    />
                                </VBox>
                            </FlexBox>
                        </IconTabFilter>
                        <IconTabFilter
                            text="Chart"
                            key="chart"
                        >
                            <FlexBox
                                renderType="Bare"
                                alignItems="Stretch"
                                justifyContent="Start"
                                height="600px"
                                width="100%"
                            >
                                <VBox
                                    fitContainer="true"
                                    height="100%"
                                    width="100%"
                                    class="sapUiSmallMarginEnd"
                                >
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                    <Panel
                                        headerText="Gráfico de Precios"
                                        width="100%"
                                        class="sapUiSizeCompact"
                                        expandable="false"
                                        expanded="true"
                                    >
                                        <headerToolbar>
                                            <OverflowToolbar>
                                                <Title
                                                    text="Gráfico de Precios"
                                                />
                                                <ToolbarSpacer />
                                                <Button
                                                    icon="sap-icon://refresh"
                                                    tooltip="Actualizar datos"
                                                    press=".onRunAnalysisPress"
                                                />
                                            </OverflowToolbar>
                                        </headerToolbar>
                                        <content>
                                            <viz:VizFrame
                                                id="idVizFrame"
                                                vizType="timeseries_line"
                                                width="100%"
                                                height="100%"
                                                uiConfig="{applicationSet:'fiori'}"
                                                busy="{= !${strategyResultModel>/chart_data} || ${strategyResultModel>/chart_data}.length === 0 }"
                                                busyIndicatorDelay="0"
                                                visible="true"
                                                selectData=".onDataPointSelect"
                                            >
                                                <viz:dataset>
                                                    <viz.data:FlattenedDataset
                                                        data="{strategyResultModel>/chart_data}"
                                                    >
                                                        <viz.data:dimensions>
                                                            <viz.data:DimensionDefinition
                                                                name="Fecha"
                                                                value="{DATE}"
                                                                dataType="date"
                                                            />
                                                        </viz.data:dimensions>
                                                        <viz.data:measures>
                                                            <viz.data:MeasureDefinition
                                                                name="Open"
                                                                value="{OPEN}"
                                                            />
                                                            <viz.data:MeasureDefinition
                                                                name="High"
                                                                value="{HIGH}"
                                                            />
                                                            <viz.data:MeasureDefinition
                                                                name="Low"
                                                                value="{LOW}"
                                                            />
                                                            <viz.data:MeasureDefinition
                                                                name="Precio de Cierre"
                                                                value="{CLOSE}"
                                                            />
                                                            <viz.data:MeasureDefinition
                                                                name="Volume"
                                                                value="{VOLUME}"
                                                            />
                                                        </viz.data:measures>
                                                    </viz.data:FlattenedDataset>
                                                </viz:dataset>
                                                <viz:feeds>
                                                    <viz.feeds:FeedItem
                                                        uid="timeAxis"
                                                        type="Dimension"
                                                        values="Fecha"
                                                    />
                                                    <viz.feeds:FeedItem
                                                        uid="valueAxis"
                                                        type="Measure"
                                                        values="Precio de Cierre"
                                                    />
                                                    <viz.feeds:FeedItem
                                                        uid="valueAxis"
                                                        type="Measure"
                                                        values="Open"
                                                    />
                                                    <viz.feeds:FeedItem
                                                        uid="valueAxis"
                                                        type="Measure"
                                                        values="High"
                                                    />
                                                    <viz.feeds:FeedItem
                                                        uid="valueAxis"
                                                        type="Measure"
                                                        values="Low"
                                                    />
                                                    <viz.feeds:FeedItem
                                                        uid="valueAxis"
                                                        type="Measure"
                                                        values="Volume"
                                                    />
                                                </viz:feeds>
                                            </viz:VizFrame>
                                        </content>
                                    </Panel>
                                </VBox>
                                <VBox
                                    width="300px"
                                    class="sapUiSmallMarginBottom"
                                >
                                    <core:Fragment
                                        id="strategyAnalysisPanelChart"
                                        fragmentName="com.invertions.sapfiorimodinv.view.investments.fragments.StrategyAnalysisPanel"
                                        type="XML"
                                    />
                                </VBox>
                            </FlexBox>
                            <VBox width="auto">
                                <core:Fragment
                                    fragmentName="com.invertions.sapfiorimodinv.view.investments.fragments.StrategyResultPanel"
                                    type="XML"
                                />
                            </VBox>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </VBox>
        </content>
    </Page>
</mvc:View>
